{
  "name": "redux-playground",
  "version": "0.0.3",
  "description": "redux-playground",
  "scripts": {
    "format": "esformatter",
    "babel-node": "babel-node",
    "test": "better-npm-run mocha:test",
    "test:watch": "better-npm-run mocha:test --watch",
    "build": "better-npm-run build:production",
    "start": "better-npm-run start:dev",
    "update": "updtr"
  },
  "engines": {
    "node": ">=5.10.0"
  },
  "betterScripts": {
    "mocha:test": {
      "command": "mocha src/**/*.spec.js -R mocha-better-spec-reporter --reporter-options stack-exclude=**/node_modules/** --compilers js:babel-core/register --require ./test/test_helper.js --recursive",
      "env": {
        "BABEL_ENV": "test"
      }
    },
    "start:dev": {
      "command": "node server/server.js",
      "env": {
        "BABEL_ENV": "development"
      }
    },
    "build:production": {
      "command": "webpack --config webpack.config.js -p",
      "env": {
        "BABEL_ENV": "production"
      }
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drathal/redux-playground.git"
  },
  "dependencies": {
    "babel-polyfill": "^6.5.0",
    "better-npm-run": "0.0.8",
    "express": "^4.13.4",
    "react": "^0.14.8",
    "react-dom": "^0.14.8",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "redux": "^3.3.1",
    "redux-logger": "^2.6.1",
    "redux-node-logger": "0.0.3",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "deep-freeze": "0.0.1",
    "enzyme": "^2.2.0",
    "esformatter": "^0.9.3",
    "esformatter-braces": "^1.2.1",
    "esformatter-dot-notation": "^1.3.1",
    "esformatter-jsx": "^5.0.0",
    "esformatter-literal-notation": "^1.0.1",
    "esformatter-quotes": "^1.0.3",
    "esformatter-spaced-lined-comment": "^2.0.1",
    "jsdom": "^8.2.0",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "mocha-better-spec-reporter": "^3.0.2",
    "react-addons-test-utils": "^0.14.7",
    "redux-devtools": "^3.1.1",
    "redux-devtools-log-monitor": "^1.0.5",
    "sinon": "^1.17.3",
    "updtr": "^0.1.10",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
